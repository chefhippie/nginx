# Generated by Chef for <%= node["fqdn"] %>
server {
  listen <%= @listen %>:80 default_server;
  server_name default;

  root <%= @web_dir %>;
  index index.html index.htm;

  location / {
    try_files $uri $uri/ =404;
  }

  location = /favicon.ico {
    allow all;
    log_not_found off;
    access_log off;
  }

  location = /robots.txt {
    allow all;
    log_not_found off;
    access_log off;
  }

  location = /404.html {
    try_files <%= @web_dir %>/404.html =404;
  }

  location = /50x.html {
    try_files <%= @web_dir %>/50x.html =500;
  }

  error_page 404 /404.html;
  error_page 500 /50x.html;
  error_page 502 /50x.html;
  error_page 503 /50x.html;
  error_page 504 /50x.html;

  <% if node.recipes.include?("php") and node["php"]["default_app"]["enabled"] %>
    location ~ [^/]\.php(/|$) {
      fastcgi_split_path_info ^(.+?\.php)(/.*)$;

      if (!-f $document_root$fastcgi_script_name) {
        return 404;
      }

      fastcgi_pass unix:<%= node["php"]["run_dir"] %>/www.socket;
      fastcgi_index index.php;

      include <%= @config_dir %>/fastcgi.params;
    }
  <% end %>
}

<% if @ssl.enabled -%>
server {
  listen <%= @listen %>:443 ssl default_server;
  server_name default;

  ssl on;
  ssl_certificate <%= @ssl.cert %>;
  ssl_certificate_key <%= @ssl.key %>;
  ssl_session_timeout 5m;
  ssl_protocols SSLv3 TLSv1;
  ssl_ciphers ALL:!ADH:!EXPORT56:RC4+RSA:+HIGH:+MEDIUM:+LOW:+SSLv3:+EXP;
  ssl_prefer_server_ciphers on;

  root <%= @web_dir %>;
  index index.html index.htm;

  location / {
    try_files $uri $uri/ =404;
  }

  location = /favicon.ico {
    allow all;
    log_not_found off;
    access_log off;
  }

  location = /robots.txt {
    allow all;
    log_not_found off;
    access_log off;
  }

  location = /404.html {
    try_files <%= @web_dir %>/404.html <%= node["nginx"]["web_dir"] %>/404.html =404;
  }

  location = /50x.html {
    try_files <%= @web_dir %>/50x.html <%= node["nginx"]["web_dir"] %>/50x.html =500;
  }

  error_page 404 /404.html;
  error_page 500 /50x.html;
  error_page 502 /50x.html;
